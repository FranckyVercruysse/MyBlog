@{
    ViewData["Title"] = "Contact";
}


<div class="container">
    

    <div class="card card-outline-secondary text-center" style="background-color: #eceeef;">
        <div class="card-header">
            <h1>Contact Me</h1>
        </div>
        <div class="card-body">
            <p class="card-text">
                Do you have any question? Please use the below contact form and send a message. I'll reply you as quick as possible.
            </p>
            <form>
                <div class="form-group row">
                    <label for="name" class="col-md-3 col-form-label">Name</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="name" placeholder="Enter Name">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="email" class="col-sm-3 col-form-label">Email</label>
                    <div class="col-md-9">
                        <input type="email" class="form-control" id="email" placeholder="Enter email">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="subject" class="col-sm-3 col-form-label">Subject</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="subject" placeholder="Subject">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="message" class="col-sm-3 col-form-label">Message</label>
                    <div class="col-md-9">
                        <textarea class="form-control" id="message" placeholder="Message"></textarea>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="offset-sm-3 col-sm-9">
                        <button type="submit" class="btn btn-primary">Submit your message!</button>
                    </div>
                </div>
            </form>

        </div>
    </div>


    
</div>