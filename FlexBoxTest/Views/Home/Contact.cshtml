@{
    ViewData["Title"] = "Contact";
}

<div class="container">
    <div class="card card-outline-secondary text-center" style="background-color: #eceeef;">
        <div class="card-header">
            <h1>Contact Me</h1>
        </div>
        <div class="card-body">
            
                <p class="card-text">
                    Do you have any question? Please use the below contact form and send a message. I'll reply you as quick as possible.
                </p>
            <div class="container">
                <form>
                    <div class="d-flex flex-column flex-sm-row align-items-center mb-3">
                        <label for="name" class="col-sm-3 p-0 m-0  mr-5 text-sm-right">Name</label>
                        <input type="text" id="name" placeholder="Enter Name" class="col-sm-8">
                    </div>

                    <div class="d-flex flex-column flex-sm-row align-items-center mb-3">
                        <label for="email" class="col-sm-3 p-0 m-0  mr-5 text-sm-right">Email</label>
                        <input type="email" id="email" placeholder="Enter email" class="col-sm-8">
                    </div>

                    <div class="d-flex flex-column flex-sm-row align-items-center mb-3">
                        <label for="subject" class="col-sm-3 p-0 m-0  mr-5 text-sm-right">Subject</label>
                        <input type="text" id="subject" placeholder="Subject" class="col-sm-8">
                    </div>

                    <div class="d-flex flex-column flex-sm-row align-items-center mb-3">
                        <label for="message" class="col-sm-3 p-0 m-0  mr-5 text-sm-right">Message</label>
                        <textarea id="message" rows="4" placeholder="Message" class="col-sm-8"></textarea>
                    </div>


                    <div class="row justify-content-center justify-content-sm-end ">
                        <button type="submit" class="btn btn-primary  mr-md-3 mr-lg-5">Submit your message!</button>
                    </div>
                </form>
            </div>
        </div> 
    </div>
</div>